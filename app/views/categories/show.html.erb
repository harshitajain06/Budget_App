<section class="flex-column height-full">
<nav class="navbar-container justify-content-between">
  <%=link_to categories_path do%>
  <i class="fa-sharp fa-solid fa-arrow-left white-color"></i>
  <%end%>
  <h5 class="white-color">Transaction</h5>
  <%= button_to destroy_user_session_path, method: :delete, class:"login-button" do %>
  <i class="fa-solid fa-right-from-bracket" style="color: #ffffff;"></i>
  <% end %>
</nav>

<p class= "text-align-center" style="color: green"><%= notice %></p>

<%= render @category %>

<div class= "purchases-list">
<% @transacs.each do |transac|%>
<div class= "category-item">
  <p><%= transac.name %></p>
  <p>$<%= transac.amount %></p>
</div>
<%end%>
</div>
<%= link_to new_transac_path(:category_id => @category.id), class: "new-catagory-container" do %>
  <div>
    New Transaction
  </div>
<% end %>
</section>